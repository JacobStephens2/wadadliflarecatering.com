# Wadadli Flare Catering - Apache Configuration

# Enable rewrite engine
RewriteEngine On

# Handle directories that have corresponding PHP files (serve the PHP file internally)
# This must come first to avoid redirect loops when both directory and PHP file exist
# When accessing /gallery/, internally serve gallery.php
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} ^(.+)/$
RewriteCond %{DOCUMENT_ROOT}%1.php -f
RewriteRule ^(.+)/$ $1.php [L]

# Remove .php extension from URLs (clean URLs)
# External redirect from .php to non-.php (must come before HTTPS redirect)
# Use THE_REQUEST to check the original request, not the rewritten one
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

# Force HTTPS (after .php removal)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Internal rewrite to add .php extension (for clean URLs)
# This handles /gallery (no slash) -> gallery.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Prevent directory listing
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8

# Protect sensitive files
<FilesMatch "\.(env|sql|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
